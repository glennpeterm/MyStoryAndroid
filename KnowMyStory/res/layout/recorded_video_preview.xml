<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    android:weightSum="2" >

    <!--
         <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6"
            android:orientation="horizontal" >
    -->

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/orange"
        android:orientation="vertical" >

        <VideoView
            android:id="@+id/video_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="false"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp" >
        </VideoView>

        <Button
            android:id="@+id/btn_preview_play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_video_preview_play" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/button_trim_rerecord_margin_bottom"
            android:layout_marginLeft="@dimen/button_trim_rerecord_margin_left"
            android:layout_marginRight="@dimen/button_trim_rerecord_margin_right"
            android:orientation="horizontal"
            android:weightSum="2" >

            <Button
                android:id="@+id/btn_rerecord"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_rerecord_height"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@color/transparent_black"
                android:text="@string/re_record"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_trim"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_trim_height"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@color/transparent_black"
                android:text="@string/trim"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>
   

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <Button
            android:id="@+id/btn_home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_home" />
    </RelativeLayout>
    <!--
    </LinearLayout>
    </LinearLayout>
    -->


    <!--
         <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5" >
    -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp" >

        <Button
            android:id="@+id/btn_next"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_next" />
    </RelativeLayout>
    <!-- </LinearLayout> -->

</RelativeLayout>